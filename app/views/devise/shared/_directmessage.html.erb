<div class="messages">
  <%= render partial: 'messages/_message', collection: @messages %>
</div>

<%= form_with model: [@direct, @message], class: 'form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'メッセージを入力してください' %>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>