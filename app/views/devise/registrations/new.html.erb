<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（6文字以上）" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :span, "経験年数" %><br />
    <%= f.text_field :span, autofocus: true, class: :form__text, autocomplete: "span" %>
  </div>

  <div class="field">
    <%= f.label :field, "経験分野" %><br />
    <%= f.text_field :field, autofocus: true, class: :form__text, autocomplete: "field" %>
  </div>


  <div class="actions">
    <%= f.submit "登録", class: :form__btn %>
  </div>
<% end %>

<%#= render "devise/shared/links" %> 
