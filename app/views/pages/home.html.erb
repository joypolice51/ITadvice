<h1>トップページ</h1>

<div class = "top-page">
  <div class = top-page-left>
    <%= render "devise/shared/side_bar" %>
  </div>
  <div class = "top-page-right">
    <% if user_signed_in? %>
      <div class="top__right">
        <%# <%= link_to "#{current_user.username}さん", user_path(current_user), class: :top__logout %> 
        <%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, class: :top__btn %>
      </div>
    <% else %>
      <div class="top__right">
        <%= link_to '新規登録', new_user_registration_path, class: :top__btn %>
        <%= link_to 'ログイン', new_user_session_path, class: :top__btn %>
      </div>
    <% end %>
  </div>
</div>
