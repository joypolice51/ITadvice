<%# ダイレクトメッセージ欄専用 by chatgpt %> 

<h1>ダイレクトメッセージ</h1>

<ul>
  <% @messages.each do |message| %>
    <li>
      <strong><%= message.sender.username %>:</strong>
      <%= message.content %>
    </li>
  <% end %>
</ul>

<%= form_with(model: @new_message, url: messages_path, method: :post) do |form| %>
  <%= form.hidden_field :recipient_id, value: @recipient.id %>
  
  <%= form.text_area :content, placeholder: 'メッセージを入力してください' %>
  <%= form.submit '送信' %>
<% end %>